dark-colour = #333
light-colour = #fff
primary-colour = #c33
highlight-colour = #f33

*
  box-sizing: border-box

:root
  font-family: "Lucida Console", monospace
  font-size: 16px
  background: dark-colour url("../assets/simple-bg.png")
  color: dark-colour

html
body
  padding: 0
  margin: 0
  width: 100%
  height: 100%

a
  color: primary-colour
  text-decoration: none
  
  &:hover
    color: highlight-colour

table
  width: 100%
  border-collapse: collapse
  
  td
  th
    border: 1px solid dark-colour
  
#app
  display: flex
  flex-direction: column
  width: 100%
  height: 100%
  margin: 0 auto
  background: light-colour

#app > header
#app > footer
  flex: 0 0 auto
  padding: 1em
  background: primary-colour
  color: light-colour
  font-size: 0.5rem
  
  h1
    margin: 0
    padding: 0

#app > main
  flex: 1 1 auto
  flex-direction: column
  display: flex
  background: light-colour

  #container-canvas
    flex: 1 1 auto
    background: light-colour
    display: flex
    align-items: center
    justify-content: center
    overflow: auto
    
    #canvas
      flex: 0 0 auto
    
  #console
    background: light-colour
    flex: 0 0 auto
    
    #console-out
      white-space: pre
      width: 100%
      height: 3.5em
      overflow: auto
      
    #console-in
      display: block
      font-family: monospace
      width: 100%
      height: 3.5em
      
      &:disabled
        background: #ccc
      
    #console-action-start
      display: block
      width: 100%
